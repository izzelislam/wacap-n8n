{
  "name": "n8n-nodes-wacap",
  "version": "1.0.1",
  "description": "n8n community node for Wacap WhatsApp HTTP API",

  "scripts": {
    "build": "tsc && gulp",
    "dev": "tsc --watch",
    "lint": "eslint nodes credentials --ext .ts",
    "lintfix": "eslint nodes credentials --ext .ts --fix",
    "prepare": "npm run build"
  },

  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "whatsapp",
    "wacap",
    "baileys",
    "waha"
  ],

  "author": "pakoor",
  "license": "MIT",

  "files": [
    "dist"
  ],

  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/WacapApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Wacap/Wacap.node.js",
      "dist/nodes/WacapTrigger/WacapTrigger.node.js"
    ]
  },

  "dependencies": {
    "n8n-workflow": "^1.60.0"
  },

  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "gulp": "^4.0.2"
  }
}
